<%- include('partials/_header.ejs') -%>

  <body>

    <!-- Navigation -->
    <%- include('partials/_navigation.ejs') -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="site-heading">
                <h1>Clean Blog</h1>
                <span class="subheading">A Blog Theme by Start Bootstrap</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-preview">
              <% for (let i=0; i < blogs.length; i++) { %>
                <a href="/post/<%=blogs[i]._id %>">
                  <h2 class="post-title">
                    <%= blogs[i].title %>
                  </h2>
                  <h3 class="post-subtitle">
                    <%= blogs[i].blogDetail %>
                  </h3>
                </a>
                <p class="post-meta">Posted by
                  <a href="#">
                    <%= blogs[i].createdBy %>
                  </a>
                  <%= blogs[i].createdDate.toLocaleString() %>
                </p>

                <% } %>
            </div>
            <hr>

            <!-- Pager -->

            <div>
              <% if(pages > 0) { %>
                <ul class="pagination">
                  <% if(showPreviousPageLink) { %>
                  <li class="page-item">
                    <a class="page-link" href="/?page=1" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <% } %>
                  <% for (let i=1; i <=pages; i++) { %>
                   
                    <% if(i==current) { %>
                    
                      <li  class="page-item active"><a href="/?page=<%= i %>" class="page-link">
                          <%= i %>
                        </a></li>
                      <% } else if(i < pages){ %>
                        
                        <li class="page-item"><a href="/?page=<%= i %>" class="page-link">
                            <%= i %>
                          </a></li>
                        <% } else { %>
                          <li class="page-item"><a href="/?page=<%= i %>" class="page-link" aria-label="Next">
                              <span aria-hidden="true">&raquo;</span>
                              <span class="sr-only">Next</span>
                            </a>
                           </li>
                          <% } %>
                            <% } %>
                </ul>
                <% } %>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <!-- Footer -->
      <%- include('partials/_footer.ejs') -%>

        <!-- Bootstrap core JavaScript -->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Custom scripts for this template -->
        <script src="js/clean-blog.min.js"></script>

  </body>

  </html>